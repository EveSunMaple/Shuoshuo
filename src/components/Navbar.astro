---
import { SITE_THEME } from "../config";
---

<div class="col-span-1 md:col-span-5 bg-opacity-0 order-1">
    <div class="navbar transition bg-base-100 rounded-xl">
        <div class="navbar-start">
            <a class="btn btn-ghost text-xl">Shuoshuo</a>
        </div>
        <div class="navbar-center flex items-center gap-2">
            <a
                tabindex="0"
                class="btn btn-ghost text-xl"
                id="navbar-home"
                href="/"
                target="_self"
                aria-label="Home"
            >
                <span class="icon-[material-symbols--home-app-logo]"></span>
                <div class="hidden md:block">Home</div>
            </a>

            <a
                tabindex="0"
                class="btn btn-ghost text-xl"
                id="navbar-blog"
                href="/blog"
                target="_self"
                aria-label="Blog"
            >
                <span class="icon-[material-symbols--article-outline]"></span>
                <div class="hidden md:block">Blog</div>
            </a>

            <a
                tabindex="0"
                class="btn btn-ghost text-xl"
                id="navbar-about"
                href="/about"
                target="_self"
                aria-label="About"
            >
                <span class="icon-[material-symbols--id-card-outline]"></span>
                <div class="hidden md:block">About</div>
            </a>
        </div>
        <div class="navbar-end">
            <label class="flex cursor-pointer gap-2">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <circle cx="12" cy="12" r="5"></circle>
                    <path
                        d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4"
                    ></path>
                </svg>
                <input
                    type="checkbox"
                    value={SITE_THEME.dark}
                    class="toggle theme-controller"
                />
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"
                    ></path>
                </svg>
            </label>
        </div>
    </div>
</div>
