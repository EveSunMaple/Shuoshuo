<div class="comment"></div>
<script type="module" is:inline>
  import { init } from "https://unpkg.com/@waline/client@v3/dist/waline.js";

  const serverURL = document
    .getElementById("waline-comment-system")
    .getAttribute("data-server-url");
  const id = document
    .getElementById("waline-comment-system")
    .getAttribute("shuoshuo-id");

  let walineInstance = init({
    el: "#waline-" + id,
    path: "/shuoshuo/" + id,
    serverURL: serverURL,
    emoji: true,
    search: false,
    comment: true,
    pageview: true,
  });

  document.addEventListener("swup:page:view", () => {
    walineInstance.update({
      el: "#waline-" + id,
      path: "/shuoshuo/" + id,
      serverURL: serverURL,
      emoji: true,
      search: false,
      comment: true,
      pageview: true,
    });
  });
</script>
